{% extends 'base.html.twig' %}

{# TitlePage #}
{% block title %}
	AdaLovelace -
	{{account.AccountType.name}}
{% endblock %}
{# ./TitlePage #}

{# stylessheetForDashboard #}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/user.css') }}">
{% endblock %}
{# ./stylessheetForDashboard #}

{# navBarTop #}
{% block nav %}
	{% include "template-elem/userDash/navTop.html.twig" %}
{% endblock %}
{# ./navBarTop #}

{# header !! dont delete !! #}
{% block header %}{% endblock %}
{# ./header !! dont delete !! #}

{# Main content #}
{% block main %}

	<main
		class="wrapper">

		{# sideNavBar #}
		{% include "template-elem/userDash/sideBarNav.html.twig" %}
		{# sideNavBar #}

		<div
			class="content">

			{# navMiddle #}
			{% include "template-elem/userDash/navMiddle.html.twig" %}
			{# ./navMiddle #}

			{# Account #}
				<div class="row"> <div class="col-lg d-flex flex-wrap justify-content-center my-5">
					<div
						class="card text-white shadow  mb-5 bg-white rounded">

						{# account title #}
						<div class="card-header bg-ligthBlack text-center shadow">
							<h4 class="text-white">{{account.AccountType.name}}</h4>
						</div>
						{# ./account title #}

						{# account amount #}
						<div class="card bg-darkGrey mx-auto mt-3 mb-3">
							<h5 class="card-title font-weight-bold m-1 p-2">Solde :
								{{account.amount}}
								<span class="text-warning">€</span>
							</h5>
						</div>
						{# ./account amount #}

						{# Transfert operation #}
						<div class="card-body">
							<div class="d-flex flex-column">
								{% for transfert in account.transferts %}
									<div class="d-flex align-items-center">
										<div class="mx-3 mt-2">
											<p class="card-title">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
										</div>
										<div class="mx-3">
											<p class="card-title m-0">
												<span class="bg-white">|</span>
												<span class="font-weight-bold">{{transfert.amount}}</span>
												<span class="text-warning">€</span>
											</p>
										</div>
									</div>
									<hr class="bg-white m-3">
								{% endfor %}
							</div>
						</div>
						{# ./Transfert operaton #}

						<div
							class="card-footer text-center">
							{# delete account #}
							<a class="btn btn-danger shadow" href="">Supprimer mon compte</a>
							{# ./delete account #}

							{# operation account #}
							<a class="btn btn-success shadow" href="">Faire un virement</a>
							{# ./operation account #}
						</div>
					</div>
					{# stats account #}
					<div class="col-4 card text-black shadow mx-2 mb-5 bg-white rounded">
						<img src="https://png2.cleanpng.com/sh/4ec80895cc44d4ebaefdbb663c2e6117/L0KzQYi4UsA4N5c8SpGAYUK8QrPsUPQyO2Y6UJC9M0O1RYe5UsE2OWM7TKkBNEi7RYeCTwBvbz==/5a292be0d13558.4332562215126476488569.png" alt="" style="heigth: 100%; width: 39rem">
					</div>
					{# ./stats account #}
				</div>
			</div>
			{# ./Account #}
		</div>
	</main>
	{# ./Main content #}
{% endblock %}

{# footer !! dont delete !! #}
{% block footer %}{% endblock %}
{# ./footer !! dont delete !! #}
				{#  Carousel  #}
				<article id="carousel" class="card col-sm col-lg mr-2 mb-4 p-0 shadow" style="height: 100%">
					<div id="carouselFade" class="carousel slide carousel-fade" data-ride="carousel">
						<div class="carousel-inner">
							<div class="carousel-item active">
								<img src="https://cdn.dribbble.com/users/1322388/screenshots/6480681/online-banking1.jpg" class="d-block w-100" alt="...">
								<div class="card carousel-caption d-none text-dark d-md-block pt-0">
									<h5 class="card-header text-white bg-warning shadow">Ici un titre</h5>
									<p class="my-4">Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
									<button class="btn bg-warning text-white shadow">voir</button>
								</div>
							</div>
							<div class="carousel-item">
								<img src="https://cdn.dribbble.com/users/1322388/screenshots/9732802/media/f6522ed90c43fa8952a6cfcf42745462.jpg" class="d-block w-100" alt="...">
								<div class="card carousel-caption d-none text-dark d-md-block pt-0">
									<h5 class="card-header text-white bg-warning shadow">Test numero 2</h5>
									<p class="my-4">Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
									<button class="btn bg-warning text-white shadow">voir</button>
								</div>
							</div>
							<div class="carousel-item">
								<img src="https://cdn.dribbble.com/users/1322388/screenshots/6162733/shopping-2.jpg" class="d-block w-100" alt="...">
								<div class="card carousel-caption d-none text-dark d-md-block pt-0">
									<h5 class="card-header text-white bg-warning shadow">Plus d'idée</h5>
									<p class="my-4">Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
									<button class="btn bg-warning text-white shadow">voir</button>
								</div>
							</div>
						</div>
						<a class="carousel-control-prev" href="#carouselFade" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#carouselFade" role="button" data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
				</article>
				{#  Carousel END #}

				{# Recover password #}
				<section class="container col-sm col-lg p-0">
					<section class="card col-sm-12 container shadow mb-4 p-0">
						<article class="text-center">
							<h2 class="card-header shadow text-white bg-warning">Mot de passe oublié</h2>
							{# Form recover password #}
							<div class="my-5">

								{% for flashes in app.flashes('Erreur lors de la réinitialisation du mot de passe') %}
									<div class="alert alert-danger" role="alert">{{ flashes }}</div>
								{% endfor %}

								<div class="d-flex justify-content-center">
									{{ form_start(requestForm) }}
									{{ form_row(requestForm.email) }}
								</div>

								<div class="my-4">
									<p>
										Recevoir un lien de réinitialisation.
									</p>
								</div>

								<button class="btn btn-warning text-white shadow my-4">valider</button>
								{{ form_end(requestForm) }}

							</div>
							{# Form recover password END #}
						</article>
					</section>
				</section>
				{# Recover password END #}
			</div>

		</div>
	</main>
{% endblock %}
